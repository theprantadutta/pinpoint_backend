# Database Configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=your-database-host
DATABASE_PORT=5432
DATABASE_NAME=pinpoint
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-secure-password
DATABASE_SSL=false

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Pinpoint API
DEBUG=True
ALLOWED_ORIGINS=http://localhost:*,https://localhost:*

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Firebase Cloud Messaging (for push notifications)
FCM_CREDENTIALS_PATH=firebase-admin-sdk.json

# Google Play (for subscription verification)
GOOGLE_PLAY_SERVICE_ACCOUNT_PATH=google-play-service-account.json
GOOGLE_PLAY_PACKAGE_NAME=com.pinpoint.app

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@pinpoint.app
SMTP_FROM_NAME=Pinpoint

# Subscription Settings
GRACE_PERIOD_DAYS=3
TRIAL_PERIOD_DAYS=7

# Admin Panel Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-super-secret-admin-password-change-this
ADMIN_JWT_EXPIRE_MINUTES=60

# Firebase Authentication
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_AUTH_ENABLED=False
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id

# Sentry (optional, for error tracking)
SENTRY_DSN=

# Server
HOST=0.0.0.0
PORT=8645
