# Production Environment Variables Example

# Database
DATABASE_CLIENT=postgres
DATABASE_HOST=your-production-db-host
DATABASE_PORT=5432
DATABASE_NAME=pinpoint
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-secure-production-password
DATABASE_SSL=true

# JWT - CHANGE THIS TO A STRONG RANDOM VALUE!
JWT_SECRET_KEY=CHANGE-THIS-TO-A-VERY-LONG-RANDOM-STRING-IN-PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# API
API_V1_PREFIX=/api/v1
PROJECT_NAME=Pinpoint API
DEBUG=False
ALLOWED_ORIGINS=https://pinpoint.app,https://www.pinpoint.app

# Redis
REDIS_URL=redis://your-redis-host:6379

# Firebase
FCM_CREDENTIALS_PATH=firebase-admin-sdk.json

# Google Play
GOOGLE_PLAY_SERVICE_ACCOUNT_PATH=google-play-service-account.json
GOOGLE_PLAY_PACKAGE_NAME=com.pinpoint.app

# Server
HOST=0.0.0.0
PORT=8000

# Sentry (optional)
# SENTRY_DSN=your-sentry-dsn
